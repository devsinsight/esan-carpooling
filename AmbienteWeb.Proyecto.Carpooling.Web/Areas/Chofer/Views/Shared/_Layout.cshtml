@using AmbienteWeb.Proyecto.Carpooling.Web.Models.Extensions;
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Carpooling</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="app">
    <div id="spinner"></div>
    <div id="app" class="page">
        <div class="main-wrapper page-main">
            <nav class="navbar navbar-expand-lg main-navbar">
                <a class="header-brand" href="index.html">
                    <img src="@Url.Content("~/Content/assets/img/brand/van-blue.png")" class="header-brand-img" alt="Carpooling">
                    <small>CARPOOLING</small>
                </a>
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fa fa-navicon"></i></a></li>
                        <li><a href="#" data-toggle="search" class="nav-link nav-link-lg d-sm-none navsearch"><i class="ion ion-search"></i></a></li>
                    </ul>

                </form>

                <ul class="navbar-nav navbar-right ">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg">
                            <img src="@Url.Content("~/Content/assets/img/avatar/avatar-2.jpeg")" alt="profile-user" class="rounded-circle w-32">
                            <div class="d-sm-none d-lg-inline-block"> @User.Identity.GetRazonSocial()</div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="profile.html" class="dropdown-item has-icon">
                                <i class="ion ion-android-person"></i> Profile
                            </a>
                            @using (Html.BeginForm("LogOff", "../Account", FormMethod.Post, new { id = "logoutForm" })) {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item has-icon">
                                    <i class="ion-ios-redo"></i> Logout
                                </a>
                            }
                        </div>
                    </li>
                </ul>
            </nav>

            <aside class="app-sidebar">
                <div class="app-sidebar__user">
                    <div class="dropdown">
                        <a class="nav-link pl-2 pr-2 leading-none d-flex" data-toggle="dropdown" href="#">
                            <img alt="image" src="@Url.Content("~/Content/assets/img/avatar/avatar-1.jpeg")" class=" avatar-md rounded-circle">
                            <span class="ml-2 d-lg-block">
                                <span class="text-dark app-sidebar__user-name mt-5"> @User.Identity.GetRazonSocial()</span><br>
                                <span class="text-muted app-sidebar__user-name text-sm">Administrator</span>
                            </span>
                        </a>
                    </div>
                </div>
                <ul class="side-menu">
                    <li>
                        <a class="side-menu__item" href="@Url.Action("Index","Vehiculo")"><i class="side-menu__icon fa fa-cab"></i><span class="side-menu__label">Viajes</span></a>
                    </li>
                    <li class="slide">
                        <a class="side-menu__item" href="@Url.Action("Index","Conductor")"><i class="side-menu__icon fa fa-users"></i><span class="side-menu__label">Chofer</span></a>
                    </li>
                </ul>
            </aside>

            <div class="app-content">
                @RenderBody()
            </div>

            <footer class="main-footer">
                <div class="text-center">
                    Copyright &copy;  Carpooling 2019.
                </div>
            </footer>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    
    @RenderSection("scripts", required: false)
</body>
</html>
